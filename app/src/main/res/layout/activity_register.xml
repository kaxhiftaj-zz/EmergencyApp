<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".RegisterActivity"
    android:background="@drawable/display">





    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/abc"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:src="@drawable/logos"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/name"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="text"
        android:textColorLink="@color/colorAccent"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:layout_below="@+id/abc"
        android:layout_alignLeft="@+id/age"
        android:layout_alignStart="@+id/age"
        android:layout_marginTop="25dp" />

    <EditText
        android:id="@+id/age"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:hint="Age"
        android:inputType="number"
        android:textColorLink="@color/colorAccent"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/dob"
        android:layout_alignStart="@+id/dob" />

    <EditText
        android:id="@+id/dob"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:hint="Date Of Birth"
        android:inputType="date"
        android:textColorLink="@color/colorAccent"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:layout_below="@+id/age"
        android:layout_alignLeft="@+id/bGroup"
        android:layout_alignStart="@+id/bGroup" />

    <EditText
        android:id="@+id/bGroup"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:hint="Blood Group"
        android:inputType="text"
        android:textColorLink="@color/colorAccent"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:layout_below="@+id/dob"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <EditText
        android:id="@+id/email"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColorLink="@color/colorAccent"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:layout_below="@+id/bGroup"
        android:layout_centerHorizontal="true" />




    <EditText
        android:id="@+id/password"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:hint="@string/hint_password"
        android:imeActionId="@+id/login"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textColorLink="@color/colorAccent"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />


    <!-- Link to Login Screen -->


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/sign_in_button"
        android:visibility="gone" />

    <Button
        style="?android:textAppearanceSmall"
        android:id="@+id/sign_up_button"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:text="@string/action_sign_in_short"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_above="@+id/btn_reset_password"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_reset_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="@string/btn_forgot_password"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="@string/btn_link_to_login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
